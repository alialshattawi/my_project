<p id="notice"><%= notice %></p>

<h1>Listing Fitnesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Review</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fitnesses.each do |fitness| %>
      <tr>
        <td><%= fitness.name %></td>
        <td><%= fitness.address %></td>
        <td><%= fitness.review %></td>
        <td><%= fitness.phone %></td>
        <td><%= fitness.email %></td>
        <td><%= link_to 'Show', fitness %></td> 
        
        
        <%if current_user.admin?%>
          <td><%= link_to 'Edit', edit_fitness_path(fitness) %></td>
          <td><%= link_to 'Destroy', fitness, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
    
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%if current_user.admin?%>
    <%= link_to 'New Fitness', new_fitness_path %>
  <%end%>